<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradiant_bg"
        tools:context=".MainActivity">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/linear"
                  android:layout_marginTop="50dp" android:padding="4dp"
    >
    <EditText android:layout_width="250dp" android:layout_height="50dp"
              android:id="@+id/city_input"
              android:background="#33fe"
              android:layout_margin="5dp"
             />
    <Button android:layout_width="wrap_content" android:layout_height="50dp"
            android:id="@+id/search_button"
            android:text="Continue"
            android:layout_margin="5dp"
          />
    </LinearLayout>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/city_out"
android:layout_below="@id/linear"
              android:layout_margin="50dp"
    />
 <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
           android:id="@+id/gps_out"
           android:layout_margin="50dp"
           android:textSize="25dp"
           android:layout_below="@id/city_out"
           android:layout_centerHorizontal="true"
           android:text="Loading..."
           />
</RelativeLayout>
